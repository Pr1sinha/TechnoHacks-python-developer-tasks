title = "Welcome to Temperature Conversion Application"
print(title)
user=input("Press letter 'c' to convert celsius to fahrenheit and letter 'f' to convert fahrenheit to celsius.")
while (user== "f" or "c"):
    if user== "f":
     fah = float(input("Enter temperature fahrenheit: "))
     cel = (fah-32)*.55
    elif user== "c":
     cel = float(input("Enter temperature celsius: "))
     fah = (1.8*cel)+32
    elif user== "no":
        print("Thanks for using the Temperature Conversion Application.")
        break
    else:
        print("\nYou did not enter c or f. Try again.")
    print('\nYour temperature in celsius is ',cel,'and your temperature in fahrenheit is ',(fah))
    print("\nPress 'f' or 'c'  to perform other conversion.\nEnter 'no' to exit.")
    user=input("Enter your choice: ")
